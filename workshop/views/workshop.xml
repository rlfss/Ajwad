<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>




        <!-- Vehicles Form -->
        <record id="view_workshop_vehicles_form" model="ir.ui.view">
            <field name="name">Vehicles</field>
            <field name="model">workshop.vehicles</field>
            <field name="arch" type="xml">
                <form string="Vehicles">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button string="Sale Order" type="object"
                                    class="oe_stat_button" icon="fa-shopping-cart">
                            </button>
                            <button string="Estimations" type="object"
                                    class="oe_stat_button" icon="fa-sticky-note">
                            </button>
                            <button string="Repair Orders" type="object"
                                    class="oe_stat_button" icon="fa-wrench ">
                            </button>
                            <button string="Odometer" type="object"
                                    class="oe_stat_button" icon="fa-hourglass-end">
                            </button>
                            <button string="Owners" type="object"
                                    class="oe_stat_button" icon="fa-users">
                            </button>
                        </div>
                        <group>
                            <field name="name"/>
                            <group>
                                <field name="make"/>
                                <field name="model"/>
                                <field name="color"/>
                                <field name="year"/>
                            </group>
                            <group>
                                <field name="fuel_type"/>
                                <field name="odometer"/>
                                <field name="liscence_plate"/>
                                <field name="last_owner"/>
                            </group>
                        </group>
                        <group>
                                <field name="vin"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

         <record id="view_workshop_vehicles_tree" model="ir.ui.view">
            <field name="name">Vehicles</field>
            <field name="model">workshop.vehicles</field>
            <field name="arch" type="xml">
                <tree string="City">
                    <field name="name"/>
                    <field name="make"/>
                    <field name="model"/>
                    <field name="year"/>
                </tree>
            </field>
        </record>

        <!-- Vehicles Form -->
        <record id="view_workshop_order_form" model="ir.ui.view">
            <field name="name">Vehicles</field>
            <field name="model">workshop</field>
            <field name="arch" type="xml">
                <form string="WorkShop Order">
                    <sheet>
                        <group>
                            <div class="oe_title">
                                <h1>
                                    <field name="name" readonly="1"/>
                                </h1>
                            </div>
                        </group>

                        <group>
                            <group>
                                <div style="width:95%;">
                                <h2>Vehicle Information</h2>
                                <br/>
                                <field name="vehicle"/>
                                </div>
                                <group>
                                    <field name="make"/>
                                    <field name="model"/>
                                    <field name="color"/>
                                    <field name="year"/>
                                </group>
                                <group>
                                    <field name="fuel_type"/>
                                    <field name="odometer"/>
                                    <field name="liscence_plate"/>
                                    <field name="last_owner"/>
                                    <field name="vin"/>
                                </group>
                            </group>
                            <group>
                                <h2>Customer Information</h2>
                                <br/>
                                <field name="customer"/>
                                <field name="adress"/>
                                <field name="phone"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Notes">
                                <h2>Customer Notes</h2>
                                <br/>
                                <field name="customer_note"/>
                                <h2>Technical Notes</h2>
                                <br/>
                                <field name="tecnical_note"/>
                            </page>

                            <page string="Spare Parts">
                                <field name="spare_parts">
                                <tree string="Spare Parts" editable="bottom">

                                <field name="product_id"/>
                                <field name="name"/>
                                <field name = "analytic_account"/>
                                <field name="product_uom_qty"/>
                                <field name="qty_delivered"/>
                                <!-- <field name ="qty_invoiced"/> -->
                                <field name = "price_unit"/>
                                <!-- <field name = "tax_id"/> -->
                                <field name = "price_subtotal"/>
                            
                                </tree>
                                </field>
                               <div class="oe_clear"/>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <field name="amount_total_spare" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <field name="amount_total_repair" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <div class="oe_inline o_td_label">
                                     <label for="amount_total_order" />
                                </div>
                                <field name="amount_total_order" nolabel="1" class="oe_subtotal_footer_separator"  widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <div class="oe_clear"/>
                            

                            </page>

                            <page string="Repair Services">
                                <field name="repair_services">
                                <tree string="Spare Parts" editable="bottom">

                                <field name="product_id"/>
                                <field name="name"/>
                                <field name = "work_center" readonly="1" force_save="1"/>
                                <field name = "service_duration" sum="Total Service Duration" widget="monetary" readonly="1" force_save="1"/>
                                <field name = "analytic_account"/>
                                <field name = "technicians"/>
                                <field name="product_uom_qty"/>
                                <field name="qty_delivered"/>
                                <!-- <field name ="qty_invoiced"/> -->
                                <field name = "price_unit"/>
                                <!-- <field name = "tax_id"/> -->
                                <field name = "price_subtotal"/>
                                </tree>
                                </field>

                                <div class="oe_clear"/>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <field name="amount_total_spare" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <field name="amount_total_repair" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <div class="oe_inline o_td_label">
                                     <label for="amount_total_order" />
                                </div>
                                <field name="amount_total_order" nolabel="1" class="oe_subtotal_footer_separator"  widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <div class="oe_clear"/>
                            </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                    </sheet>
                </form>
            </field>
        </record>

