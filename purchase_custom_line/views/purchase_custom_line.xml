<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="purchase_custom_order_line_view" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="before">
                    <field name="initial_price_unit"/>
                    <field name="support"/>
            </xpath>
        </field>
     </record>

        <record id="action_move_lines" model="ir.actions.act_window">
            <field name="name">stock.move</field>
            <field name="res_model">stock.move</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>
        <menuitem action="action_move_lines" name="stock move"  id="action_move_lines_menu" sequence="1" parent="purchase.menu_procurement_management"/>

    </data>
</odoo>
